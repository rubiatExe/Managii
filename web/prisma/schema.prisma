datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Job {
  id          String   @id @default(uuid())
  title       String
  company     String
  description String
  url         String   @unique
  location    String?  // Job location
  category    String?  // Job category: sde, aiml, cv, nlp, robo
  isRelevant  Boolean  @default(true) // Filter flag for relevance
  status      String   @default("Applied") // Applied, Interviewing, Offer, Rejected
  fitScore    Int?
  analysis    String?  // JSON string for detailed analysis (strengths, weaknesses)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Resume {
  id        String   @id @default(uuid())
  name      String
  fileName  String?
  fileType  String?
  content   String   // Text content of the resume
  isMaster  Boolean  @default(false)
  createdAt DateTime @default(now())
}
