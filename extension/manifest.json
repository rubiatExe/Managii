{
  "manifest_version": 3,
  "name": "Managify Job Tracker",
  "version": "1.0",
  "description": "Track job applications and analyze fit with AI.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.bamboohr.com/*",
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*",
        "https://*.wd1.myworkdayjobs.com/*",
        "https://*.wd5.myworkdayjobs.com/*"
      ],
      "js": [
        "filters.js",
        "content.js"
      ],
      "css": [
        "floating-button.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}